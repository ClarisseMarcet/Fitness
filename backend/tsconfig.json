{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./",
      "module": "CommonJS",
      "target": "ES2020",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  